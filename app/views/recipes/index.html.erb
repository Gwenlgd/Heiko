<%# URL : /recipes   %>
<%# PATH recipes %>


<h2> Your Recipes </h2>

  <div class="button-recipe-index">
    <button class="btn btn-primary">
      <%= link_to "Add Recipe", new_recipe_path %>
    </button>
  </div>
  <div class="category-recipe">

    <% @recipes.each do | recipe | %>
  <div class="category-recipe">
      <div class="card-recipe-name">
        <%= link_to recipe_path(recipe) do %>
        <h3><%= recipe.name %></h3>
        <% end %>
    </div>
  </div>
<% end %>



