<%# PATH : new_report_report_mood %>
<%# URL : /reports/:report_id/report_moods/new %>

<div class="week"><%= render "shared/calendar_week" %></div>
<div class="day-cal-report"><%= render "shared/calendar_day_name" %></div>

 <%# display the moods here %>
 <%= simple_form_for([@report, @report_mood]) do |f| %>
   <%= f.input :mood_id, collection: Mood.all, input_html: { class: "card-ms-overview", multiple: true } %>
   <%= f.submit %>
 <% end %>

 <div class="mood-selector">

<div class="category-ms moods">
    <div class="card-ms">
      <div class="square">
        <%= inline_svg_tag("superhappy.svg", class:"card-ms-icon" )  %>
          <p>Super happy</p>
      </div>
    </div>
    <div class="card-ms">
      <div class="square">
        <%= inline_svg_tag("happy.svg", class:"card-ms-icon" )  %>
