      </div>
    </div>
    <div class="card-ms">
      <div class="square">
        <%= inline_svg_tag("crying.svg", class:"card-ms-icon" )  %>
         <p>Sad</p>
      </div>

    </div>
    <div class="card-ms">
      <div class="square">
        <%= inline_svg_tag("anxious.svg", class:"card-ms-icon" )  %>
        <p>Anxious</p>
      </div>

    </div>
    <div class="card-ms">
      <div class="square">
        <%= inline_svg_tag("stressed.svg", class:"card-ms-icon" )  %>
        <p>Stressed</p>
      </div>

    </div>
    <div class="card-ms">
      <div class="square">
        <%= inline_svg_tag("angry.svg", class:"card-ms-icon" )  %>
        <p>Angry</p>
      </div>

    </div>

    <div class="card-ms">
      <div class="square">
        <%= inline_svg_tag("stressed.svg", class:"card-ms-icon" )  %>
